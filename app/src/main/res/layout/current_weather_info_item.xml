<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="150dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/ic_temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/infoNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/infoImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infoValueTv"
        tools:text="WIND"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/infoValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/infoImage"
        app:layout_constraintTop_toBottomOf="@id/infoNameTv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        tools:text="19.2 km/h"
        />

</androidx.constraintlayout.widget.ConstraintLayout>